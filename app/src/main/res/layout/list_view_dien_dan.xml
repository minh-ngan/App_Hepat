<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FAF0F0">

    <ImageButton
        android:id="@+id/imbtnKhung"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:src="@drawable/nen_8"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />
    <ImageView
        android:id="@+id/imvicon_user"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_baseline_account_circle_24"
        app:layout_constraintTop_toTopOf="@id/imbtnKhung"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="15dp"/>
    <TextView
        android:id="@+id/txtName_User"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trần Văn An"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/imbtnKhung"
        app:layout_constraintLeft_toRightOf="@id/imvicon_user"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/txtThoiGian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="vài giây trước"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/txtName_User"
        app:layout_constraintLeft_toRightOf="@id/imvicon_user"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/txtQuestion"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:text="Cho mình hỏi cách thanh toán tại bệnh viện như thế nào ạ ?"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/txtThoiGian"
        app:layout_constraintLeft_toLeftOf="@id/imbtnKhung"
        app:layout_constraintRight_toRightOf="@id/imbtnKhung"
        android:layout_marginRight="18dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="20dp"/>

    <ImageButton
        android:id="@+id/imbtnMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginRight="30dp"
        android:background="@null"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:src="@drawable/ic_baseline_more_horiz_24"
        app:layout_constraintRight_toRightOf="@id/imbtnKhung"
        app:layout_constraintTop_toTopOf="@id/imbtnKhung"
        tools:ignore="SpeakableTextPresentCheck" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_baseline_mode_comment_24"
        android:backgroundTint="@color/white"
        android:text="Bình luận"
        android:textSize="12sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/txtQuestion"
        app:layout_constraintRight_toRightOf="@id/imbtnKhung"
        android:layout_marginTop="5dp"
        android:layout_marginRight="30dp"
        app:layout_constraintBottom_toBottomOf="@id/imbtnKhung"
        android:layout_marginBottom="10dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>